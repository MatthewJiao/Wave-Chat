<body
  style="
    background-color: rgba(2, 5, 161, 0.91);
    font-family: 'Poppins', sans-serif;
  "
>
  <!-- ======= Header ======= -->
  <header
    id="header"
    class="fixed-top d-flex align-items-center header-transparent"
  >
    <div class="container-fluid d-flex align-items-center">
      <div class="logo mr-auto">
        <a href="/"
          ><img src="/assets/img/logo3.png" alt="" class="img-fluid"
        /></a>
      </div>

      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/#about">About</a></li>
          <li><a href="/#details">Inspiration</a></li>
          <li><a href="#how-it-works">How it Works</a></li>
          <li><a href="/#video">Demo Video</a></li>
          <li><a href="/#team">Team</a></li>
          <!--ADD LINKS HERE TO LINK TO SIGNUP/LOGIN PAGE -->
          <li><a href="/users/login">Log In</a></li>
          <li>
            <a id="signup" href="/users/register"><b>Sign Up</b></a>
          </li>
        </ul>
      </nav>
      <!-- .nav-menu -->
    </div>
  </header>
  <!-- End Header -->

  <div class="container">
    <div class="row">
      <div class="col reee">
        <img src="/assets/img/omeguiconlight.png" class="img-fluid" alt="" />
      </div>
      <div class="col ree">
        <h4 id="title" style="color: white;">
          <br /><br />
          We have sent a verification code to your email. <br />Please check
          your email and enter the code here. <br /><br />
        </h4>
        <div id="form">
          <form id="innerform" action="/users/verify" method="POST">
            <div class="form-group" style="text-align: left;">
              <%- include('./partials/messages.ejs') %>
              <label for="email" style="color: white;">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Re-enter Your Email"
              />
            </div>
            <div class="form-group" style="text-align: left;">
              <label for="password" style="color: white;"
                >Verification Code</label
              >
              <input
                type="pin"
                id="pin"
                name="pin"
                class="form-control"
                placeholder="Enter Your 6 Digit Code Here"
              />
            </div>
            <button
              type="submit"
              class="btn btn-primary btn-block"
              style="
                font-size: 1.2rem;
                margin-top: 2rem !important;
                width: 25%;
                margin: 0 auto;
              "
            >
              Verify
            </button>
          </form>

          <form id="bottom-form" action="/users/verify" method="POST">
            <div class="form-group">
              <label for="email" style="color: white;"
                >Didn't get the Code?
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter your email"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">
              Re-send Verification Code
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
